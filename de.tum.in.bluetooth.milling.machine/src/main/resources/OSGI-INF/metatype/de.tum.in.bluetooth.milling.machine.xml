<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0"
	localization="en_us">
	<OCD id="de.tum.in.bluetooth.milling.machine" name="Milling Machine"
		description="This is used to consume all the mentioned bluetooth enabled milling machines for communciating with Raspberry Pi ">

		<Icon
			resource="http://icons.iconarchive.com/icons/thiago-silva/palm/128/Settings-Bluetooth-icon.png"
			size="32" />

		<AD id="bluetooth.devices.address" name="bluetooth.devices.address"
			type="String" cardinality="0" required="false"
			default="0003C92DB48F=Milling_Machine_1;0015C94DA14A=Milling_Machine_2;0246BBADA53B=Milling_Machine_3"
			description="Configurable property to set list of bluetooth enabled milling machines" />

		<AD id="milling.machine.setPoint" name="milling.machine.setPoint" type="Float"
			cardinality="0" required="false" default="20.5" min="5.0" max="40.0"
			description="Configurable Property to check the setpoint speed for milling machines." />

	</OCD>

	<Designate pid="de.tum.in.bluetooth.milling.machine">
		<Object ocdref="de.tum.in.bluetooth.milling.machine" />
	</Designate>
</MetaData>
